[module/powermenu]
type = custom/menu

format-padding = 5

label-open = 
label-close = 
label-separator = |

menu-0-0 = Restart
menu-0-0-exec = menu-open-1
menu-0-1 = Shutdown
menu-0-1-exec = menu-open-2
menu-0-2 = Log Off
menu-0-2-exec = menu-open-3

menu-1-0 = Restart
menu-1-0-exec = systemctl reboot
menu-1-1 = Cancel
menu-1-1-exec = menu-open-0

menu-2-0 = Shutdown
menu-2-0-exec = systemctl poweroff
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

menu-3-0 = Log Off
menu-3-0-exec = bspc quit -1
menu-3-1 = Cancel
menu-3-1-exec = menu-open-0

